<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>For My Dear Nikky ‚ú®</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Quicksand:wght@400;700&display=swap');

        :root {
            --bg: #f5f3ff;
            --accent: #9d72ff;
            --glass: rgba(255, 255, 255, 0.9);
        }

        body {
            margin: 0; padding: 0;
            background-color: var(--bg);
            font-family: 'Quicksand', sans-serif;
            display: flex; justify-content: center; align-items: center;
            height: 100vh; overflow: hidden;
            color: #4a348c;
        }

        .container {
            width: 360px; height: 640px;
            background: #fff url('https://www.transparenttextures.com/patterns/stardust.png');
            border: 8px solid white; border-radius: 40px;
            position: relative; overflow-y: auto; overflow-x: hidden;
            box-shadow: 0 25px 50px rgba(0,0,0,0.1);
            scroll-behavior: smooth;
        }

        .container::-webkit-scrollbar { display: none; }

        section {
            min-height: 100%; width: 100%;
            display: flex; flex-direction: column;
            align-items: center; justify-content: center;
            padding: 25px; box-sizing: border-box;
            text-align: center;
        }

        .gif-img {
            width: 220px;
            border-radius: 20px;
            margin-bottom: 15px;
            box-shadow: 0 10px 20px rgba(157, 114, 255, 0.2);
        }

        /* Loading Bar */
        .loading-bar { width: 80%; height: 10px; background: #eee; border-radius: 10px; margin-top: 15px; }
        .fill { width: 0%; height: 100%; background: var(--accent); animation: load 3.5s forwards; }
        @keyframes load { to { width: 100%; } }

        /* Memory Game Cards */
        .grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 10px; margin-top: 15px; }
        .card {
            width: 80px; height: 80px; background: var(--accent);
            border-radius: 12px; color: white; font-size: 2rem;
            display: flex; align-items: center; justify-content: center; cursor: pointer;
            transition: 0.3s;
        }
        .matched { background: white !important; color: var(--accent); border: 2px solid var(--accent); transform: scale(0.9); }

        .btn {
            background: var(--accent); color: white; border: none; padding: 12px 30px;
            border-radius: 30px; font-weight: bold; cursor: pointer; margin-top: 15px;
            box-shadow: 0 5px 15px rgba(157, 114, 255, 0.4);
        }

        #noBtn { position: relative; transition: 0.1s; background: #ddd; color: #666; }

        /* Celebration Overlay */
        #celebration {
            position: absolute; top: 0; left: 0; width: 100%; height: 100%;
            background: var(--bg); display: none; flex-direction: column;
            align-items: center; justify-content: center; z-index: 100;
            text-align: center; padding: 20px;
        }
    </style>
</head>
<body>

    <audio id="bgMusic" loop>
        <source src="https://www.soundhelix.com/examples/mp3/SoundHelix-Song-2.mp3" type="audio/mpeg">
    </audio>

    <div class="container" id="mainContainer">
        
        <section id="s1">
            <img src="https://c.tenor.com/LbOTuZXj9y4AAAAC/cat-love.gif" class="gif-img">
            <h2>Wait for it, Nikky... üíñ</h2>
            <div class="loading-bar"><div class="fill"></div></div>
        </section>

        <section id="s2">
            <div style="background: var(--glass); padding: 25px; border-radius: 25px; border: 2px dashed var(--accent);">
                <h3>Hey Nikky! üíå</h3>
                <p>"Tum ho toh sab accha lagta hai... I just wanted to remind you how special you are."</p>
                <button class="btn" onclick="scrollToSection('s3')">A Small Game? ‚ûî</button>
            </div>
        </section>

        <section id="s3">
            <h3>Memory Match üê±</h3>
            <div class="grid" id="gameGrid"></div>
            <button class="btn" id="gameNext" style="display:none;" onclick="scrollToSection('s4')">See Surprise ‚ûî</button>
        </section>

        <section id="s4">
            <img src="https://c.tenor.com/LbOTuZXj9y4AAAAC/cat-love.gif" class="gif-img">
            <h2>The Grand Finale...</h2>
            <p>Will you be my Valentine, Nikky? ‚ú®</p>
            <div style="display: flex; gap: 15px;">
                <button class="btn" onclick="celebrate()">Yes!</button>
                <button class="btn" id="noBtn" onmouseover="moveNo()">No</button>
            </div>
            <div style="margin-top: 40px; font-weight: bold;">- Your Prem ‚ù§Ô∏è</div>
        </section>

        <div id="celebration">
            <img src="https://c.tenor.com/LbOTuZXj9y4AAAAC/cat-love.gif" class="gif-img">
            <h2 style="color: var(--accent);">Mujhe pta tha tum yess krogii! ‚ù§Ô∏è</h2>
            <p>You made my day, Nikky!</p>
            <p style="font-weight: bold; margin-top: 20px;">- Your Prem</p>
        </div>
    </div>

    <script>
        const music = document.getElementById('bgMusic');
        
        setTimeout(() => { scrollToSection('s2'); }, 4000);

        function scrollToSection(id) {
            document.getElementById(id).scrollIntoView({ behavior: 'smooth' });
            if(music.paused) music.play().catch(() => {});
        }

        const emojis = ['üê±', 'üíñ', 'üéÅ', 'üê±', 'üíñ', 'üéÅ'];
        let shuffled = emojis.sort(() => 0.5 - Math.random());
        const grid = document.getElementById('gameGrid');
        let selected = [];
        let matchedCount = 0;

        shuffled.forEach((emoji) => {
            const card = document.createElement('div');
            card.className = 'card';
            card.dataset.val = emoji;
            card.innerHTML = '?';
            card.onclick = function() {
                if(selected.length < 2 && this.innerHTML === '?') {
                    this.innerHTML = this.dataset.val;
                    selected.push(this);
                    if(selected.length === 2) {
                        if(selected[0].dataset.val === selected[1].dataset.val) {
                            selected[0].classList.add('matched');
                            selected[1].classList.add('matched');
                            matchedCount += 2;
                            selected = [];
                            if(matchedCount === 6) document.getElementById('gameNext').style.display = 'block';
                        } else {
                            setTimeout(() => {
                                selected[0].innerHTML = '?';
                                selected[1].innerHTML = '?';
                                selected = [];
                            }, 500);
                        }
                    }
                }
            };
            grid.appendChild(card);
        });

        function moveNo() {
            const btn = document.getElementById('noBtn');
            btn.style.position = 'absolute';
            btn.style.top = Math.random() * 80 + '%';
            btn.style.left = Math.random() * 80 + '%';
        }

        function celebrate() {
            document.getElementById('celebration').style.display = 'flex';
            // Floating hearts
            for(let i=0; i<50; i++) {
                const h = document.createElement('div');
                h.innerHTML = 'üíñ';
                h.style.position = 'fixed';
                h.style.left = Math.random() * 100 + 'vw';
                h.style.top = '100vh';
                h.style.fontSize = '24px';
                h.style.transition = '4s linear';
                document.body.appendChild(h);
                setTimeout(() => { h.style.transform = `translateY(-110vh) rotate(360deg)`; }, 100);
            }
        }
    </script>
</body>
</html>
